@model List<string>

@if (Model.Count > 0)
{
<div class="widget">
    <div class="section-title">
        <h5>برچسب ها</h5>
    </div>
    <div class="widget-tags">
        <ul class="list-inline">
            @foreach (var tagGroup in Model)
            {
                @foreach (var tag in tagGroup.Split("-"))
                {
                    <li>
                        <a asp-controller="Home"
                        asp-action="Search"
                        asp-route-filter="@tag">@tag</a>
                    </li>
                }
            }
        </ul>
    </div>
</div>
}