@model Tuple<List<User>,int>
@{
    Layout = "_AdminLayout";
    //int page = int.Parse(Context.Request.Query["page"].ToString() ?? "1");
    //int i = page + ((page - 1) * 20);
    int j = 1;
}

<style>
    .user-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>

<div class="table-responsive-md">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">تصویر</th>
                <th scope="col">نام</th>
                <th scope="col">نام خانوادگی</th>
                <th scope="col">شماره موبایل</th>
                <th scope="col">ایمیل</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Item1)
            {
                <tr>
                    <th scope="row">@j</th>
                    <td>
                        <a asp-controller="Author" asp-action="Index"
                       asp-route-authorId="@user.Id">
                            <img class="user-img" src="~/images/users/@user.ImageName" />
                        </a>
                    </td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Mobile</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">نقش</a>
                        <a href="#" class="btn btn-sm btn-danger">حذف</a>
                    </td>
                </tr>

                j++;
            }
        </tbody>
    </table>
</div>

@if (Model.Item2 > 1)
{
    <!--pagination-->
    <div class="col-lg-12">
        <div class="pagination mt--10">
            <ul class="list-inline">
                @for (int i = 1; i < Model.Item2 + 1; i++)
                {
                    <li class="active">
                        <a asp-controller="Admin"
                   asp-action="ManageUsers"
                   asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </div>
        <!--/-->
    </div>
}