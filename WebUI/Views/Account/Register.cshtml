@model RegisterViewModel
@{
}

<style>
    .field-validation-error {
        color: #F67280;
        font-size: .8rem;
        padding: 10px 20px 0 20px;
    }

    .validation-summary-errors {
        color: #F67280;
        font-size: .8rem;
        margin-bottom: 20px;
        padding: 0 20px;
    }
</style>

<section class="section pt-55 mb-50">
    <div class="container-fluid">
        <div class="sign widget">
            <div class="section-title">
                <h5>ثبت نام</h5>
            </div>

            <div asp-validation-summary="ModelOnly"></div>

            <form asp-controller="Account" asp-action="Register" class="sign-form widget-form contact_form " method="post">

                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="نام *">
                    <span asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی *">
                    <span asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Mobile" class="form-control" placeholder="شماره موبایل *">
                    <span asp-validation-for="Mobile"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="کلمه عبور *">
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <input asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبور *">
                    <span asp-validation-for="RePassword"></span>
                </div>

                <div class="sign-controls form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsRulesAccepted" class="custom-control-input" id="rememberMe">
                        <label class="custom-control-label" for="rememberMe">با تمامی <a href="#" class="btn-link">شرایط و ضوابط</a> موافقم. </label>
                        <span asp-validation-for="IsRulesAccepted"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-custom">ثبت نام</button>
                </div>
                <p class="form-group text-center">حساب کاربری دارید؟ <a asp-controller="Account" asp-action="Login" class="btn-link">وارد شوید</a> </p>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}