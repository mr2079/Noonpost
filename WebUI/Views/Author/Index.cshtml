@model AuthorInfoViewModel
@{
    ViewData["IsUserPanel"] = false.ToString();
}

<style>
    .w-100 {
        width: 100%;
    }

    .info-box {
        font-size: .8rem;
    }

    .select-user-img {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .user-img-box {
        margin-bottom: 1rem;
    }

        .user-img-box img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

    .user-avatar {
        width: 100px;
        height: 100px;
        overflow: hidden;
        border-radius: 50%;
        margin: 0 auto 20px auto;
    }

    .user-avatar img {
        width: 100%;
        object-fit: cover;
    }
</style>

<section class="section author full-space mb-40 pt-55">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--widget-author-->
                <div class="widget-author inner-width">
                    @if (Model.ImageName != null)
                    {
                        <div class="user-avatar">
                            <a asp-controller="Author" asp-action="Index" asp-route-authorId="@Model.AuthorId" class="image">
                                <img src="~/images/users/@Model.ImageName" alt="@(Model.FirstName+" "+Model.LastName)">
                            </a>
                        </div>
                    }
                    <h6><span>سلام، من @(Model.FirstName + " " + Model.LastName) هستم!</span></h6>
                    @if (Model.Description != null)
                    {
                        <div class="user-description">
                            @Html.Raw(Model.Description)
                        </div>
                        <br />
                    }
                    @if (Model.Articles.Count() > 0)
                    {
                        <div class="link">@ViewData["ArticlesCount"] مقاله</div>
                    }


