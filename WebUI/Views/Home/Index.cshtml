@model Tuple<List<Article>, List<Article>, int>

<style>
    .ellipsis-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .hero-content h2 {
        direction: rtl;
    }
    .author-img-box {
        width: 40px;
        height: 40px;
        margin-left: 8px;
    }
</style>

<!--carousel-hero-->
<section class="section carousel-hero">
    <div class="owl-carousel">
        @foreach (var slider in Model.Item1)
        {
            <div class="hero d-flex align-items-center " style="background-image: url('../images/articles/@slider.ImageName')">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                            <div class="hero-content">
                                <h2>
                                    <a asp-controller="Article"
                                   asp-action="Show"
                                   asp-route-articleCId="@slider.CId"
                                   asp-route-articleTitle="@slider.Title.Replace(" ", "-")">@slider.Title</a>
                                </h2>

                                <div class="post-card-info">
                                    <ul class="list-inline">
                                        <li>
                                            <a asp-controller="Author"
                                           asp-action="Index"
                                           asp-route-authorCId="@slider.User.CId"
                                           asp-route-authorName="@slider.User.FullName.Replace(" ", "-")">@slider.User.FullName</a>
                                        </li>
                                        <li class="dot"></li>
                                        <li>@slider.CreateDate.ToShamsi()</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!--/-->
<!--grid-layout-->
<section class="section pt-85">
    <div class="container-fluid">
        <div class="row">
            @foreach (var article in Model.Item2)
            {
                <div class="col-lg-6 col-md-6">
                    <div class="post-card">
                        <div class="post-card-image width-lg height-lg">
                            <a asp-controller="Article"
                           asp-action="Show"
                           asp-route-articleCId="@article.CId"
                           asp-route-articleTitle="@article.Title.Replace(" ", "-")">
                                <img src="~/images/articles/thumb600/@article.ImageName" alt="@article.Title">
                            </a>
                        </div>
                        <div class="post-card-content">
                            <a class="categorie"
                                asp-controller="Article"
                                asp-action="Category"
                                asp-route-categoryCId="@article.Category.CId"
                           asp-route-categoryTitle="@article.Category.Title.Replace(" ", "-")">@article.Category.Title</a>
                            <h5>
                                <a class="ellipsis-1" asp-controller="Article"
                               asp-action="Show"
                               asp-route-articleCId="@article.CId"
                               asp-route-articleTitle="@article.Title.Replace(" ", "-")">@article.Title</a>
                            </h5>
                            <div class="short-description ellipsis-2">@Html.Raw(article.Text.Substring(0, 200))</div>
                            <div class="post-card-info">
                                <ul class="list-inline">
                                    <li>
                                        <div class="img-box author-img-box">
                                            <a asp-controller="Author"
                                           asp-action="Index"
                                           asp-route-authorCId="@article.User.CId"
                                           asp-route-authorName="@article.User.FullName.Replace(" ", "-")">
                                                <img src="~/images/users/thumb60/@article.User.ImageName"
                                                     alt="@article.User.FullName">
                                            </a>
                                        </div>
                                    </li>
                                    <li>
                                        <a asp-controller="Author"
                                       asp-action="Index"
                                       asp-route-authorCId="@article.User.CId"
                                       asp-route-authorName="@article.User.FullName.Replace(" ", "-")">@article.User.FullName</a>
                                    </li>
                                    <li class="dot"></li>
                                    <li>@article.CreateDate.ToShamsi()</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Item3 > 1)
            {
                <!--pagination-->
                <div class="col-lg-12">
                    <div class="pagination mt--10">
                        <ul class="list-inline">
                            @for (int i = 1; i < Model.Item3 + 1; i++)
                            {
                                <li class="active">
                                    <a asp-controller="Home"
                               asp-action="Index"
                               asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!--/-->
                </div>
            }
        </div>
    </div>
</section>
<!--/-->