@model Tuple<List<Article>, int>

<style>
    .ellipsis-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .no-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 0 30px 50px 30px;
    }

        .no-content img {
            max-width: 300px;
        }
</style>

<!--category-->
<section class="categorie-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="categorie-title">
                    <h3>جستجو : <span>@Context.Request.Query["filter"]</span></h3>
                </div>
            </div>
        </div>
    </div>
</section>

@if (Model.Item1.Count > 0)
{
    <section class="section pt-85 mt-0">
        <div class="container-fluid">
            <div class="row">
                @foreach (var article in Model.Item1)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="post-card">
                            <div class="post-card-image">
                                <a asp-controller="Article" asp-action="Show" asp-route-articleId="@article.Id">
                                    <img src="~/images/articles/@article.ImageName" alt="@article.Title">
                                </a>
                            </div>
                            <div class="post-card-content">
                                <h5>
                                    <a asp-controller="Article" asp-action="Show"
                               asp-route-articleId="@article.Id">@article.Title</a>
                                </h5>
                                <div class="short-description ellipsis-2">@Html.Raw(article.Text.Substring(0, 120))</div>
                                <div class="post-card-info">
                                    <ul class="list-inline">
                                        <li>
                                            <a asp-controller="Author"
                                       asp-action="Index"
                                       asp-route-authorId="@article.User.Id">
                                                <img src="~/images/users/@article.User.ImageName"
                                             alt="@(article.User.FirstName+" "+article.User.LastName)">
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Author"
                                       asp-action="Index"
                                       asp-route-authorId="@article.User.Id">
                                                @(article.User.FirstName + " " + article.User.LastName)
                                            </a>
                                        </li>
                                        <li class="dot"></li>
                                        <li>@article.CreateDate.ToShamsi()</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Item2 > 1)
            {
                <!--pagination-->
                <div class="col-lg-12">
                    <div class="pagination mt--10">
                        <ul class="list-inline">
                            @for (int i = 1; i < Model.Item2 + 1; i++)
                            {
                                <li class="active">
                                    <a asp-controller="Home"
                           asp-action="Search"
                           asp-route-filter="@Context.Request.Query["filter"]"
                           asp-route-page="@i">@i</a>
                                </li>
                            }
                            @*<li>
                    <a href="#">
                    <i class="arrow_carrot-2left"></i>
                    </a>
                    </li>*@
                        </ul>
                    </div>
                    <!--/-->
                </div>
            }
        </div>
    </section>
}
else
{
    <div class="no-content">
        <img src="~/assets/img/no-content.gif" />
    </div>
}